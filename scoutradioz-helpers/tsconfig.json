{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		// note: DOM is included because of PushSubscription
		"lib": ["ESNext", "ESNext.Symbol", "DOM"],
		"rootDir": "./src",
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"declarationDir": "./types",
		"noImplicitAny": true,
		"skipLibCheck": false,
		"newLine": "crlf",
		//   "removeComments": true,
	},
	"include": [
		"./src/*"
	],
	"ts-node": {
		"transpileOnly": true, // VS Code has type checking built in, and TSC will also do it when we want to do a proper build.
	}
}