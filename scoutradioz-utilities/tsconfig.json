{
	"compilerOptions": {
		"target": "es2020",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./build",
		"esModuleInterop": true,
		"strict": true,
		"declaration": true,
		"declarationDir": "./types",
		"moduleResolution": "node",
		"newLine": "crlf",
		"composite": true
		//   "removeComments": true,
	},
	"include": [
		"./src/*"
	],
	"ts-node": {
		"transpileOnly": true, // VS Code has type checking built in, and TSC will also do it when we want to do a proper build.
	}
}