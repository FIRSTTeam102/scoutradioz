//-
	Org mgmt page to swap members between/in/out of pairs.
		PARAM
			scorers		[Array] Member names that are ASSIGNED
			users		[Array] All members
		manage/scoutingpairs.js	
		'/manage/swapmatchscouters'
	//
extends ../../layout
block content
	h2 Swap Match Scouts
	p
	form#swap-form(name="swap-form" method="post" action="")
		div(class="w3-container w3-padding-16")
			label(class="w3-quarter w3-label theme-inline-padding") Scout to swap OUT: 
			select(class="w3-half theme-input" type="text" name="swapout")
				option
				each scorer, i in scorers
					option(value=scorer.id class="w3-bar-item") #{scorer.name}
		div(class="w3-container w3-padding-16")
			label(class="w3-quarter w3-label theme-inline-padding") User to swap IN: 
			select(class="w3-half theme-input" type="text" name="swapin")
				option
				each user, i in users
					option(value=user._id class="w3-bar-item") #{user.name}
		div(class="w3-container w3-padding-16")
			label(class="w3-quarter w3-label theme-inline-padding") Number of matches to swap (-1 for all): 
			input(class="w3-half theme-input" type="number" name="numMatches" value="-1")
		div(class="w3-padding-16")
			input(type="submit" class="gear-btn theme-link w3-btn" value="Submit")
