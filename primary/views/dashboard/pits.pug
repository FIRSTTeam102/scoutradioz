extends ../layout

block content
	if teams.length > 0
		h3(class="theme-text")=title
		p
		table(class="w3-content w3-center theme-contains-spacer")
			th Assignee
			th Team #
			th Nickname
			- if (pics)
				th Pic
			each team in teams
				if( user.name == team.primary )
					- color = "gear-text-orange";
				else
					- color = "theme-text";
				tr(class=`w3-margin ${color}`)
					td(class="theme-spacer")
						h4(class=`${color}`) #{team.primary}
					td(class="theme-spacer")
						if team.data
							a(href=`/scouting/pit?team=${team.team_key}`) 
								div(class="gear-btn w3-dark-grey w3-btn w3-section")
									span= team.team_key.substring(3)
						else
							a(href=`/scouting/pit?team=${team.team_key}`) 
								div(class="gear-btn theme-link w3-btn w3-section")
									span= team.team_key.substring(3)
					td(class='w3-left-align theme-spacer')
						h4(class=`${color}`) #{team.nickname}
					- if (pics)
						td(class="theme-spacer")
							img(src=`${fileRoot}/uploads/responsive/${event_year}_${team.team_key}_sm.jpg` alt="" class="w3-image" style="max-height:80px;max-width:50px;")
		h6
			a(class="gear-btn theme-link w3-btn" href=`/dashboard/pits?pics=yes`) Refresh with pictures

